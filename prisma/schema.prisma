generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum AccountType {
  CHECKING
  CREDIT_CARD
  SAVINGS
  CASH
}

enum TransactionCategory {
  GROCERIES
  RENT
  INSURANCE
  UTILITIES
  INCOME
  CASH
  TRANSFER
  OTHER
}

model Account {
  id           String        @id @default(cuid())
  name         String
  type         AccountType
  currency     String        @default("EUR")
  createdAt    DateTime      @default(now())
  transactions Transaction[]
}

model Transaction {
  id           String   @id @default(cuid())
  accountId    String
  bookingDate  DateTime
  valueDate    DateTime
  amount       Decimal
  description  String
  memoRaw      String
  category     TransactionCategory?
  merchantName String?
  merchantKey  String?
  counterparty String
  purpose      String
  fingerprint  String
  source       String   @default("import")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id])

  @@unique([accountId, fingerprint])
}

model MerchantRule {
  id           String              @id @default(cuid())
  pattern      String
  merchantName String
  category     TransactionCategory
  confidence   Int                 @default(50)
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  @@index([pattern])
}
